@using Members.PartFieldSettings
@model OrchardCore.ContentFields.ViewModels.EditTextFieldViewModel

@{
    var settings = Model.PartFieldDefinition.GetSettings<TextFieldSettings>();
    var settingsExt = (FieldSettingsExt)(Model as IShape).Properties["FieldSettingsExt"];
}

<div class="form-floating">
    <input asp-is-disabled="settingsExt.Disabled" asp-for="Text" placeholder="smth" class="form-control content-preview-text" type="tel" />
    @if (!String.IsNullOrEmpty(settings.Hint))
    {
        <span class="hint">@settings.Hint</span>
    }
    <label asp-for="Text">@settingsExt.Label</label>
</div>
