@using Members.PartFieldSettings
@model OrchardCore.ContentFields.ViewModels.EditDateFieldViewModel

@{
    var settings = Model.PartFieldDefinition.GetSettings<DateFieldSettings>();
    var settingsExt = (FieldSettingsExt)(Model as IShape).Properties["FieldSettingsExt"];
}

<div class="form-floating">
    <input asp-is-disabled="settingsExt.Disabled" asp-for="Value" type="date" class="form-control content-preview-select" required="@settings.Required" />
    @if (!String.IsNullOrEmpty(settings.Hint))
    {
        <span class="hint">@settings.Hint</span>
    }
    <label asp-for="Value">@settingsExt.Disabled</label>
</div>